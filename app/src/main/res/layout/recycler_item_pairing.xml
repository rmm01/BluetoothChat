<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp">

    <ImageView
        android:id="@+id/connection_icon"
        android:src="@drawable/ic_group_add_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:padding="16dp"/>

    <android.support.v4.widget.Space
        android:id="@+id/center_vertical"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/bluetooth_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/connection_icon"
        android:layout_toStartOf="@id/connection_icon"
        android:layout_above="@id/center_vertical"
        android:paddingLeft="16dp"
        android:paddingStart="16dp"
        android:paddingRight="16dp"
        android:paddingEnd="16dp"
        android:gravity="bottom"
        android:textColor="@color/primaryText"
        android:textSize="16sp"
        tools:text="bluetooth name"/>

    <TextView
        android:id="@+id/mac_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/connection_icon"
        android:layout_toStartOf="@id/connection_icon"
        android:layout_below="@id/center_vertical"
        android:paddingLeft="16dp"
        android:paddingStart="16dp"
        android:paddingRight="16dp"
        android:paddingEnd="16dp"
        android:gravity="top"
        android:textColor="@color/secondaryText"
        android:textSize="14sp"
        tools:text="mac address"/>

</RelativeLayout>