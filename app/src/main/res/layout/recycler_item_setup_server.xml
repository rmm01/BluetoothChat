<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp">

    <ImageView
        android:id="@+id/status_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="16dp"
        tools:src="@drawable/ic_person_black_24dp"/>

    <ImageView
        android:id="@+id/recycler_item_extras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:padding="16dp"
        android:background="@drawable/recycler_item_selector"
        android:src="@drawable/ic_arrow_drop_right_black_24dp"/>

    <android.support.v4.widget.Space
        android:id="@+id/center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/bluetooth_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="72dp"
        android:layout_marginStart="72dp"
        android:layout_above="@id/center_vertical"
        android:layout_toLeftOf="@id/recycler_item_extras"
        android:layout_toStartOf="@id/recycler_item_extras"
        android:textColor="@color/primaryText"
        android:textSize="16sp"
        tools:text="bluetooth_name"/>

    <TextView
        android:id="@+id/bluetooth_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="72dp"
        android:layout_marginStart="72dp"
        android:layout_below="@id/center_vertical"
        android:layout_toLeftOf="@id/recycler_item_extras"
        android:layout_toStartOf="@id/recycler_item_extras"
        android:textColor="@color/secondaryText"
        android:textSize="14sp"
        tools:text="bluetooth_name"/>

</RelativeLayout>